<Window x:Class="Processes_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Processes_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox Name="processListBox" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="450" Height="150"/>
        <StackPanel Orientation="Horizontal">
            <Button Height="50" Content="Show Processes" Click="ShowProcesses_Click" />
            <Button Height="50" Margin="60,0,0,0" Content="Create New Process" Click="CreateNewProcess_Click"  />
            <Button Height="50" Margin="60,0,0,0" Content="Kill Process" Click="KillProcess_Click"  />
        </StackPanel>
    </Grid>
</Window>
